<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <div class="col-sm-8">
        <% if current_user %>
          <h2>What do you think about <%= @product.name %>?</h2>
          <%= form_for([@product, @review]) do |f| %>

          <% if @review.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@review.errors.count, "error") %> prevented this review from being saved:</h2>
            <ul>

            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>

            </ul>
          </div>
        <% end %>

        <div class="field review-form">
          <%= f.label :"Review" %> <br>
          <%= f.text_area :description, :class => 'form-control' %>
        </div>
        <div class="dropdown">
          <%= f.label :rating %>
          <%= f.select :rating, (1..5), :class => 'dropdown-toggle', :role => 'button', :'data-toggle' => 'dropdown'%>
        </div>
        <div class="actions">
          <%= f.submit 'Submit review', :class => 'btn review-submit-button' %>
        </div>
        <% end %>
      <% end %>
    </div>
    <div>
      <br>
      <h2>Reviews</h2>
        <% @product.reviews.reverse_each do |review| %>
          <div class="well published-review col-xs-6 col-xs-offset-3">
            <%= render partial: 'review', locals: {review: review, user: review.user, current_user: current_user} %>
          </div>
        <% end %>
    </div>


  </article>

</section>
